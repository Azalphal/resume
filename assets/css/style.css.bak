/*
*
* Rest
*
*/

* {
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
}

/*
  *
  * Columns
  *
  */

/* 
  *
  * navBar 
  *
  */

.active {
  background-color: rgb(210, 177, 30);
}

.navBar {
  height: 100%;
  width: 15em;
  position: fixed;
  overflow: hidden;
  border-style: none solid none none;
  border-color: rgb(128, 128, 128);
  z-index: 1;
  top: 0;
  left: -15em;
  /* padding-top: 3.75em; */
  background-color: rgb(182, 182, 182);
  transition: 0.3s;
}

.navBar:hover {
  left: 4.7em;
}

.hoverMe:hover+.navBar {
  left: 4.7em;
  transition: 0.3s;
}

.hoverMe {
  height: 100%;
  width: 1.5em;
  font-size: 50px;
  position: fixed;
  display: block;
  border-style: none solid none none;
  border-color: rgb(128, 128, 128);
  z-index: 2;
  left: 0;
  color: rgb(124, 124, 124);
  background-color: rgb(182, 182, 182);
  top: 0;
  padding: 9em 0 0 0.3em;
}

.hoverMe:hover .fa-solid.fa-bars {
  transform: rotate(180deg);
}

.hoverMe .fa-solid.fa-bars {
  transition: 0.5s;
}

.navBar a.btns,
.socials,
.active {
  font-size: 30px;
  display: block;
  text-align: left;
  text-decoration: none;
  transition: 0.3s;
  color: rgb(0, 0, 0);
  padding: 0.3em 0.3em 0.3em 1.3em;
  border-style: none none solid none;
  border-radius: 0 0.3em 0.3em 0;
}

.navBar a.btns:hover {
  background-color: rgb(158, 75, 6);
  transition: 0.3s;
}

.socials {
  padding: 0.3em;
  background-color: rgb(51, 51, 51);
  border-radius: 0;
}

.fa-github {
  color: rgb(255, 255, 255);
}

.fa-linkedin {
  color: rgb(0, 114, 177);
}

.fa-solid.fa-moon {
  font-size: 50px;
  padding: 11.8em 0 0 0.1em;
}


